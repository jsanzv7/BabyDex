<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSplashBackground"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/babydex_logo_imageView"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:src="@drawable/babydex_logo"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/babydex_title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="BabyDex"
        android:textStyle="bold"
        android:textSize="36dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_margin="37dp"
        android:textColor="@color/colorSplashText"/>


</RelativeLayout>